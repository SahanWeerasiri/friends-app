<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#424141"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <TextView
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/pop_name"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/pop_image"
        android:padding="5dp"

        />

    <EditText
        android:id="@+id/pop_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:cursorVisible="false"
        android:editable="false"
        android:enabled="false"
        android:focusable="false"
        android:padding="5dp"
        android:text="Number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/pop_call"

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/phonecall"
            android:padding="10dp" />

        <ImageView
            android:layout_marginRight="50dp"
            android:layout_width="40dp"
            android:layout_marginLeft="90dp"
            android:padding="10dp"
            android:layout_height="40dp"
            android:id="@+id/pop_video"
            android:background="@drawable/videocall"/>

    </LinearLayout>



</LinearLayout>